<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Größe einer Datei bestimmen</Title>
      <Author>Microsoft Corporation</Author>
      <Description>Ruft die Größe einer Datei ab und ordnet sie einer Variablen zu.</Description>
      <Shortcut>filSize</Shortcut>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>filename</ID>
          <ToolTip>Ersetzen Sie dies durch den Dateinamen.</ToolTip>
          <Default>"filename.txt"</Default>
        </Literal>
      </Declarations>
      <Code Language="VB" Kind="method body"><![CDATA[Dim fileSize As Long 
fileSize = My.Computer.FileSystem.GetFileInfo($filename$).Length]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
