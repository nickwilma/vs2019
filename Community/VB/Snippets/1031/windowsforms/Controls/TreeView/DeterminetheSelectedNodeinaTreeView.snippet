<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Ausgewählten Knoten in TreeView bestimmen</Title>
      <Author>Microsoft Corporation</Author>
      <Description>Bestimmt den ausgewählten Knoten in einem TreeView-Steuerelement and weist ihn einer Variable zu.</Description>
      <Shortcut>tvSelect</Shortcut>
    </Header>
    <Snippet>
      <References>
        <Reference>
          <Assembly>System.Windows.Forms.dll</Assembly>
        </Reference>
      </References>
      <Imports>
        <Import>
          <Namespace>System.Windows.Forms</Namespace>
        </Import>
        <Import>
          <Namespace>Microsoft.VisualBasic</Namespace>
        </Import>
        <Import>
          <Namespace>System</Namespace>
        </Import>
      </Imports>
      <Declarations>
        <Object>
          <ID>treeViewName</ID>
          <Type>TreeView</Type>
          <ToolTip>Ersetzen Sie dies durch eine Baumansicht in Ihrem Formular.</ToolTip>
          <Default>TreeView1</Default>
        </Object>
      </Declarations>
      <Code Language="VB" Kind="method body"><![CDATA[Dim selectedNode As TreeNode
selectedNode = $treeViewName$.SelectedNode]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
