<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Menge des verfügbaren Festplattenspeichers suchen</Title>
      <Author>Microsoft Corporation</Author>
      <Description>Gibt die Menge des verfügbaren Festplattenspeichers auf einem angegebenen Laufwerk zurück.</Description>
      <Shortcut>sysSpace</Shortcut>
    </Header>
    <Snippet>
      <Imports>
        <Import>
          <Namespace>System</Namespace>
        </Import>
        <Import>
          <Namespace>Microsoft.VisualBasic</Namespace>
        </Import>
      </Imports>
      <Declarations>
        <Literal>
          <ID>DriveLetter</ID>
          <Type>String</Type>
          <ToolTip>Ersetzen Sie dies durch den abzufragenden Laufwerkbuchstaben.</ToolTip>
          <Default>"C:\"</Default>
        </Literal>
      </Declarations>
      <Code Language="VB" Kind="method body"><![CDATA[Dim drive = My.Computer.FileSystem.GetDriveInfo($DriveLetter$)
Dim space = drive.AvailableFreeSpace]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
