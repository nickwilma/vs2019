<CssModule name="CSSOM View" standard-reference="https://www.w3.org/TR/cssom-view/" status="WD" pub-date="2016-03-17">

  <CssProperty _locID="scroll-behavior"
               _locAttrData="description"
               restriction="enum"
               syntax="div { $(name): smooth; }"
               description="Specifies the scrolling behavior for a scrolling box, when scrolling happens due to navigation, CSSOM scrolling APIs, or scroll snapping operations not initiated by the user."
               standard-reference="https://drafts.csswg.org/cssom-view/#smooth-scrolling">

      <entry _locId="scroll-behavior_auto"
             _locAttrData="description"
             value="auto"
             description="The scrolling box is scrolled in an instant fashion." />
      <entry _locId="scroll-behavior_smooth"
             _locAttrData="description"
             value="smooth"
             description="The scrolling box is scrolled in a smooth fashion using a user-agent-defined timing function over a user-agent-defined period of time. User agents should follow platform conventions, if any." />
  </CssProperty>

</CssModule>
