<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>ng2component</Title>
    <Author>Microsoft Corporation</Author>
    <Shortcut>ng2component</Shortcut>
    <Description>用于添加 Angular 2 组件的代码片段</Description>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
    </SnippetTypes>
  </Header>
  <Snippet>
    <Declarations>
      <Literal>
        <ID>myComponent</ID>
        <ToolTip>组件名称</ToolTip>
        <Default>my-component</Default>
      </Literal>
      <Literal>
        <ID>template</ID>
        <ToolTip>模板</ToolTip>
        <Default><div>你好，我的名字是 {{name}}。</div></Default>
      </Literal>
      <Literal>
        <ID>ComponentName</ID>
        <ToolTip>组件类名</ToolTip>
        <Default>Example</Default>
      </Literal>
    </Declarations>
    <Code Language="TypeScript"><![CDATA[
      import { Component } from 'angular/core'; 
     
      @Component({
          selector: '$myComponent$',
          template: '$template$'
      })
      export class $ComponentName$Component {
          constructor() {
              this.name = 'Sam';
          }
      }
     ]]></Code>
  </Snippet>
</CodeSnippet>
